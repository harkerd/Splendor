<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:padding="5dp"
                android:layout_margin="@dimen/card_margin"
                android:background="@drawable/card">

    <drew.harker.splendorapp.view.SourceView
        android:id="@+id/source"
        android:layout_width="@dimen/small_token_size"
        android:layout_height="@dimen/small_token_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/points"
        android:paddingLeft="@dimen/card_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/large_text"
        android:text="0"/>

    <!-- Cost List (size 1 to 4)-->
    <LinearLayout
        android:id="@+id/requirementsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <drew.harker.splendorapp.view.ValueTokenView
            android:id="@+id/diamondCost"
            android:layout_width="@dimen/small_token_size"
            android:layout_height="@dimen/small_token_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:text="0"
            android:background="@drawable/circle"
            custom:coin_color="@color/diamond"
            custom:always_visible="false"
            custom:selectable="false"/>

        <drew.harker.splendorapp.view.ValueTokenView
            android:id="@+id/sapphireCost"
            android:layout_width="@dimen/small_token_size"
            android:layout_height="@dimen/small_token_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:text="0"
            android:visibility="gone"
            android:background="@drawable/circle"
            custom:coin_color="@color/sapphire"
            custom:always_visible="false"
            custom:selectable="false"/>

        <drew.harker.splendorapp.view.ValueTokenView
            android:id="@+id/emeraldCost"
            android:layout_width="@dimen/small_token_size"
            android:layout_height="@dimen/small_token_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:text="0"
            android:background="@drawable/circle"
            custom:coin_color="@color/emerald"
            custom:always_visible="false"
            custom:selectable="false"/>

        <drew.harker.splendorapp.view.ValueTokenView
            android:id="@+id/rubyCost"
            android:layout_width="@dimen/small_token_size"
            android:layout_height="@dimen/small_token_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:text="0"
            android:background="@drawable/circle"
            custom:coin_color="@color/ruby"
            custom:always_visible="false"
            custom:selectable="false"/>

        <drew.harker.splendorapp.view.ValueTokenView
            android:id="@+id/onyxCost"
            android:layout_width="@dimen/small_token_size"
            android:layout_height="@dimen/small_token_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:text="0"
            android:background="@drawable/circle"
            custom:coin_color="@color/onyx"
            custom:always_visible="false"
            custom:selectable="false"/>

    </LinearLayout>

</RelativeLayout>