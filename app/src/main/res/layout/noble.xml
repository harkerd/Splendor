<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/noble_size"
              android:layout_height="@dimen/noble_size"
              android:padding="5dp"
              android:layout_margin="@dimen/card_margin"
              android:background="@drawable/card"
              android:gravity="center_horizontal">
    <TextView
        android:id="@+id/points"
        android:paddingRight="@dimen/card_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/large_text"
        android:text="0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:text="0">

        <TextView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:background="@drawable/sapphire_square"
            android:text="0"/>

        <View
            android:layout_width="@dimen/card_margin"
            android:layout_height="@dimen/card_margin"/>

        <TextView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:background="@drawable/emerald_square"
            android:text="0"/>

        <View
            android:layout_width="@dimen/card_margin"
            android:layout_height="@dimen/card_margin"/>

        <TextView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:textSize="@dimen/small_text"
            style="@style/border_text"
            android:background="@drawable/onyx_square"
            android:text="0"/>

    </LinearLayout>


</RelativeLayout>